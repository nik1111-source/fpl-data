name: Update FPL Data

on:
  schedule:
    - cron: "0 6 * * *"
    - cron: "0 18 * * *"
  workflow_dispatch: {}

jobs:
  run:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install numpy pandas requests

      - name: Run FPL scraper
        run: python update_fpl_api.py
      
      - name: Run Transfermarkt scraper
        run: python update_transfermarkt_club_values.py


      - name: Commit updated outputs
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "github-actions[bot]@users.noreply.github.com"
          git add public data_stage
          git commit -m "Update FPL API data" || echo "No changes to commit"
          git push
